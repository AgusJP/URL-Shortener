  <script>
    function copyToClipboard() {
      let inputElement = document.getElementById("inputText");
      inputElement.select();
      document.execCommand("copy");
      if (!inputElement.value) {
        Toastify({
          text: "No link has been copied. Make sure you generate a link first.",
          duration: 2000,
          gravity: "bottom",
          position: "right",
          offset: {
            x: 20, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 20 // vertical axis - can be a number or a string indicating unity. eg: '2em'
          }, // `left`, `center` or `right`
          style: {
            background: "orange",
          }
        }).showToast();
      } else {
        Toastify({
          text: "Copied successfully! The link will expire in 1 hour.",
          duration: 2000,
          gravity: "bottom",
          position: "right",
          offset: {
            x: 20, // horizontal axis - can be a number or a string indicating unity. eg: '2em'
            y: 20 // vertical axis - can be a number or a string indicating unity. eg: '2em'
          }, // `left`, `center` or `right`
          style: {
            background: "black",
          }
        }).showToast();
      }    
